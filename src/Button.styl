.tButton
  border 0
  outline none
  height 44px
  line-height 44px
  width 350px
  border-radius 5px
  font-size 17px

.tButtonPrimary
  background #EA5630
  color #fff
  &.hover
    background #d85330

.tButtonSecondary
  background #f98c24
  color #fff
  &.hover
    background #d17925

.tButtonDanger
  background #fb3419
  color white
  &.hover
    background #e1351e

.tButton.disable
  color white
  background rgba(255, 255, 255, 0.4)