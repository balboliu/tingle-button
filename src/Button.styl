@require "../node_modules/tingle-style/src/var"

.tButton
  border 0
  outline none
  height 44px
  line-height 44px
  width 100%
  border-radius 5px
  font-size 17px

.tButtonPrimary
  background #EA5630
  color #fff
  &.hover
    background #d85330

.tButtonSecondary
  background #f98c24
  color #fff
  &.hover
    background #d17925

.tButtonDanger
  background #fb3419
  color white
  &.hover
    background #e1351e

.tButton.disable
  color white
  background #bdbdbd

.tButtonSmall
  height 24px
  line-height 24px
  font-size 12px

.tButtonMedium
  height 30px
  line-height 30px
  font-size 14px